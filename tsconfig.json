{
  "compilerOptions": {
    "baseUrl": ".", // Root directory of your project
    "paths": {
      "@liquity/*": ["liquity/*"] // Map "@" to the "src" folder
    },
    "outDir": "build",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "target": "ES2019",
    "lib": ["ES2019", "DOM"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
