{
  "compilerOptions": {
    "outDir": "build",
    "declaration": true,
    "paths": {
      "@liquity/*": ["./liquity/*"]
    },
    "declarationMap": true,
    "sourceMap": true,
    "target": "ES2019",
    "lib": ["ES2019", "DOM"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true
  }
}
